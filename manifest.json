{
  "manifest_version": 3,
  "name": "Do4Me.ai",
  "version": "1.1.0",
  "description": "An AI assistant that can help with browsing tasks through voice commands and screen analysis",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "desktopCapture",
    "sidePanel",
    "downloads",
    "offscreen"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "offscreen_documents":[
    {
      "matches": ["*://*/*"],
      "url": "offscreen.html",
      "reason": "DOM_SCRAPING",
      "use_dynamic_url": false
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; img-src 'self' https://doforme.s3.us-east-1.amazonaws.com; connect-src 'self' https://api.openai.com https://*.openai.com https://generativelanguage.googleapis.com https://doforme.s3.us-east-1.amazonaws.com https://api.anthropic.com/v1/messages https://api.anthropic.com/*; object-src 'none';"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
 "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "css": ["index.css"]
    }
  ],
  "web_accessible_resources": [{
    "resources": [
      "sidepanel.html",
      "sidebar.js",
      "storage.js",
      "index.html",
      "index.css",
      "index.js",
      "main.js",
      "*.js.map",
      "assets/*",
      "node_modules/@aws-sdk/client-s3/dist/browser/*.js",
      "s3UploadService.js"
    ],
    "matches": ["*://*/*"]
  }],

  "commands": {
    "toggle-listening": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Toggle voice listening"
    },
    "toggle-watching": {
      "suggested_key": {
        "default": "Ctrl+Shift+W",
        "mac": "Command+Shift+W"
      },
      "description": "Toggle screen watching"
    }
  }
}